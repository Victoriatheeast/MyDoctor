
<ul class="list-group">
  <li class="list-group-item active">Appointment</li>
  <li class="list-group-item">Date: <%= @appointment.time_slot.date%></li>
  <li class="list-group-item">Start from: <%= @appointment.time_slot.start_time%></li>
  <li class="list-group-item">To: <%= @appointment.time_slot.end_time%></li>
  <li class="list-group-item">Duration: <%= @appointment.time_slot.duration%></li>
  <li class="list-group-item">Doctor: <%= @appointment.time_slot.doctor.first_name%> <%= @appointment.time_slot.doctor.last_name%></li>
  <li class="list-group-item">Patient: <%= User.find_by(id: @appointment.user_id).name%></li>
  <% if @appointment.is_completed == 't' %>
  <li class="list-group-item list-group-item-success">Completion: Yeah, you completed this appointment</li>
  <% else %>
  <li class="list-group-item ">Completion: No</li>
  <% end %>
  <li class="list-group-item">Review: <%= @appointment.review %></li>
</ul>

<a href= "/appointments" class="btn btn-warning">Appointments</a>
