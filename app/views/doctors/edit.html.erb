<h3>Edit Doctor</h3>

<%= form_tag "/doctors/#{@doctor.id}", method: 'patch' do %>

  <p>
    <%= label_tag "first name" %>
    <%= text_field_tag "first_name", @doctor.first_name%>
  </p>
    <p>
    <%= label_tag "last name" %>
    <%= text_field_tag "last_name", @doctor.last_name %>
  </p>
  <p>
    <%= collection_select(:specialty_id, :id, Specialty.all, :id, :name, prompt: "Select a specialty")%>
    Didn't find it? <%= link_to "Add New Specialty", "/specialties/new"%>
  </p>

  <p>
    <%= collection_select(:practice_id, :id, Practice.all, :id, :name, prompt: "Select a pratice")%>
    Didn't find it? <%= link_to "Add New Practice", "/practices/new"%>
  </p>

  <p>
    <%= label_tag "professional statement" %>
    <%= text_field_tag "professional_statement", @doctor.professional_statement%>
  </p>

  <p>
    <%= label_tag "image url" %>
    <%= text_field_tag "profile_img_url", @doctor.profile_img_url%>
  </p>

  <p>
      <%= submit_tag "Submit", class: 'button' %>

      or

      <%= link_to "Cancel", "/doctors/#{@doctor.id}" %>
  </p>

<% end %>

