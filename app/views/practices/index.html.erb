<table class="table table-striped table-hover">
    <thead>
      <tr class="bg-danger">
        <th>Practice</th>
        <th>Location</th>
        <th>Doctor</th>
      </tr>
    </thead>
    
    <tbody>
	<% @practices.each do |practice|%>
	<% if practice.doctors.empty?%>
		<tr>
			<td><%= practice.name %></td>
			<td><%= practice.location %></td>
			<td></td>
		</tr>
	<% else %>
		<% practice.doctors.each do |doctor| %>
			<tr>
				<td><%= practice.name %></td>
				<td><%= practice.location %></td>
				<td><%= link_to "#{doctor.first_name} #{doctor.last_name}", "/doctors/#{doctor.id}"%></td>
			</tr>
		<% end %>
	<% end %>
	<% end %>
</tbody>
</table>