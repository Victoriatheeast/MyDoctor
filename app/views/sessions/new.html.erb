<h2>Sign In</h2>

<%= form_tag "/login" do %>

    <p>
      <%= label_tag "Email Address" %>
      <%= text_field_tag "email_address", "", autofocus: true %>
    </p>

    <p>
      <%= label_tag "password" %>
      <%= password_field_tag "password" %>
      
      <input type="checkbox" id="reveal">
      <label for="reveal">Show Password</label>
      <script>
      $(document).ready(function(){
        $("#reveal").on("change",function(){
          if (this.checked){
            $("#password").attr("type","text");
          } else {
            $("#password").attr("type","password");
          }
        })
      })
      </script>
    </p>

    <p>
        <%= submit_tag "Let Me In", class: 'button' %>

        or

        <%= link_to "Cancel", "/" %>
    </p>

<% end %>
