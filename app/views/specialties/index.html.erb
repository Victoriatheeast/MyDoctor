<table class="table table-striped table-hover">
  <thead>
      <tr class="bg-success">
        <th>Specialty</th>
        <th>Doctor</th>
      </tr>
    </thead>

    <tbody>
  <% @specialties.each do |specialty|%>
  <% if specialty.doctors.empty?%>
    <tr>
        <td><%= specialty.name %></td>
        <td></td>
    </tr>
  <% else %>
    <% specialty.doctors.each do |doctor| %>
      <tr>
        <td><%= specialty.name %></td>
        <td><%= link_to "#{doctor.first_name} #{doctor.last_name}", "/doctors/#{doctor.id}"%></td>
      </tr>
    <% end %>
  <% end %>
  <% end %>
</tbody>
</table>