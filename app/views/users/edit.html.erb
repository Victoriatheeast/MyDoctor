<%= form_tag "/users/#{@user.id}", method: 'patch' do %>

  <p>
    <%= label_tag "Name" %>
    <%= text_field_tag "name", @user.name%>
  </p>

  <p>
    <%= label_tag "Email Address" %>
    <%= text_field_tag "email_address", @user.email_address %>
  </p>

  <p>
    <%= label_tag "password" %>
    <%= password_field_tag "password", @user.password %>
      <input type="checkbox" id="reveal">
      <label for="reveal">Show Password</label>
      <script>
      $(document).ready(function(){
        $("#reveal").on("change",function(){
          if (this.checked){
            $("#password").attr("type","text");
          } else {
            $("#password").attr("type","password");
          }
        })
      })
      </script>
  </p>

  <p>
      <%= submit_tag "Update My Profile", class: 'button' %>
  </p>

<% end %>
