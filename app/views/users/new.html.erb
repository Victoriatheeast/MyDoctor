<h2>Sign Up</h2>

<ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>

<%= form_tag "/users" do %>

  <p>
    <%= label_tag "Name" %>
    <%= text_field_tag "name", @user.name, autofocus: true %>
  </p>

  <p>
    <%= label_tag "Email Address" %>
    <%= text_field_tag "email_address", @user.email_address %>
  </p>

  <p>
    <%= label_tag "password" %>
    <%= password_field_tag "password", @user.password %>
  </p>

  <p>
      <%= submit_tag "Sign Me Up", class: 'button' %>

      or

      <%= link_to "Cancel", "/doctors" %>
  </p>

<% end %>
